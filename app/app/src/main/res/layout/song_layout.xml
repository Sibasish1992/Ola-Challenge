<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_half_margin"
    android:layout_marginRight="@dimen/activity_horizontal_half_margin"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/olaplay_logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/songart"
            android:padding="0dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/topic_icon"
            android:padding="4dp"
            android:clickable="true"
            android:layout_marginLeft="4dp"
            android:background="?android:attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="Geometry"
                style="@style/listHeader"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/topic_icon"
            android:padding="4dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/play"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_play_arrow"
                />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/download"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_downloading_action"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/status"
                    android:text="Local"
                    android:textColor="@color/primary_dark"

                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

        <View style="@style/Divider" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Hello JAjjaaaaaaaaj"
            style="@style/listSubheader"
            android:gravity="center_vertical"
            android:id="@+id/artist"
            android:layout_marginLeft="@dimen/activity_horizontal_half_margin"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/favourite"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_star"
                android:tint="@color/lightText"
                />
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>